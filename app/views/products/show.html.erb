<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:model) %>:</strong></dt>
  <dd><%= @product.model %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sku) %>:</strong></dt>
  <dd><%= @product.sku %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mpn) %>:</strong></dt>
  <dd><%= @product.mpn %></dd>
  <dt><strong><%= model_class.human_attribute_name(:upc) %>:</strong></dt>
  <dd><%= @product.upc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ean) %>:</strong></dt>
  <dd><%= @product.ean %></dd>
  <dt><strong><%= model_class.human_attribute_name(:jan) %>:</strong></dt>
  <dd><%= @product.jan %></dd>
  <dt><strong><%= model_class.human_attribute_name(:isbn) %>:</strong></dt>
  <dd><%= @product.isbn %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @product.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantity) %>:</strong></dt>
  <dd><%= @product.quantity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image) %>:</strong></dt>
  <dd><%= @product.image %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shipping) %>:</strong></dt>
  <dd><%= @product.shipping %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @product.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:points) %>:</strong></dt>
  <dd><%= @product.points %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_available) %>:</strong></dt>
  <dd><%= @product.date_available %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weight) %>:</strong></dt>
  <dd><%= @product.weight %></dd>
  <dt><strong><%= model_class.human_attribute_name(:length) %>:</strong></dt>
  <dd><%= @product.length %></dd>
  <dt><strong><%= model_class.human_attribute_name(:width) %>:</strong></dt>
  <dd><%= @product.width %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subtract) %>:</strong></dt>
  <dd><%= @product.subtract %></dd>
  <dt><strong><%= model_class.human_attribute_name(:minimum) %>:</strong></dt>
  <dd><%= @product.minimum %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sort_order) %>:</strong></dt>
  <dd><%= @product.sort_order %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @product.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:viewed) %>:</strong></dt>
  <dd><%= @product.viewed %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stock_status_id) %>:</strong></dt>
  <dd><%= @product.stock_status_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:manufacturer_id) %>:</strong></dt>
  <dd><%= @product.manufacturer_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tax_class_id) %>:</strong></dt>
  <dd><%= @product.tax_class_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              products_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_product_path(@product), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              product_path(@product),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <%= button_to "Add to Cart", line_items_path(product_id: @product), :class => "btn btn-success pull-right" %>
</div>
