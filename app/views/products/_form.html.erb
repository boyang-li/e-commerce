<%= simple_form_for @product, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :model %>
  <%= f.input :sku %>
  <%= f.input :mpn %>
  <%= f.input :upc %>
  <%= f.input :ean %>
  <%= f.input :jan %>
  <%= f.input :isbn %>
  <%= f.input :location %>
  <%= f.input :quantity %>
  <%= f.input :image %>
  <%= f.input :shipping %>
  <%= f.input :price %>
  <%= f.input :points %>
  <%= f.input :date_available %>
  <%= f.input :weight %>
  <%= f.input :length %>
  <%= f.input :width %>
  <%= f.input :subtract %>
  <%= f.input :minimum %>
  <%= f.input :sort_order %>
  <%= f.input :status %>
  <%= f.input :viewed %>
  <%= f.input :stock_status_id %>
  <%= f.input :manufacturer_id %>
  <%= f.input :tax_class_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                products_path, :class => 'btn' %>
  </div>
<% end %>
