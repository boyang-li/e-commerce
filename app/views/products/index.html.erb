<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:vender_id) %></th>
      <th><%= model_class.human_attribute_name(:active) %></th>
      <th><%= model_class.human_attribute_name(:min) %></th>
      <th><%= model_class.human_attribute_name(:max) %></th>
      <th><%= model_class.human_attribute_name(:start_time) %></th>
      <th><%= model_class.human_attribute_name(:end_time) %></th>
      <th><%= model_class.human_attribute_name(:expire_on) %></th>
      <th><%= model_class.human_attribute_name(:regular_price) %></th>
      <th><%= model_class.human_attribute_name(:actual_price) %></th>
      <th><%= model_class.human_attribute_name(:product_fee) %></th>
      <th><%= model_class.human_attribute_name(:currency) %></th>
      <th><%= model_class.human_attribute_name(:image_url) %></th>
      <th><%= model_class.human_attribute_name(:require_shipping) %></th>
      <th><%= model_class.human_attribute_name(:editor) %></th>
      <th><%= model_class.human_attribute_name(:payment_gateway) %></th>
      <th><%= model_class.human_attribute_name(:categories_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.id, product_path(product) %></td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.vender_id %></td>
        <td><%= product.active %></td>
        <td><%= product.min %></td>
        <td><%= product.max %></td>
        <td><%= product.start_time %></td>
        <td><%= product.end_time %></td>
        <td><%= product.expire_on %></td>
        <td><%= product.regular_price %></td>
        <td><%= product.actual_price %></td>
        <td><%= product.product_fee %></td>
        <td><%= product.currency %></td>
        <td><%= product.image_url %></td>
        <td><%= product.require_shipping %></td>
        <td><%= product.editor %></td>
        <td><%= product.payment_gateway %></td>
        <td><%= product.categories_id %></td>
        <td><%=l product.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_path(product), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_path,
            :class => 'btn btn-primary' %>
